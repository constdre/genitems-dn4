@using Microsoft.AspNet.Identity.Owin;
@using Microsoft.AspNet.Identity;
@using System.Web.Http;
@using ASProject.Models;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Item Inventory</title>

    <link href="~/Content/css/materialize.min.css" rel="stylesheet" />
    <script src="~/Content/js/materialize.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Raleway|Roboto" rel="stylesheet">
    <link href="~/Content/css/general.css" rel="stylesheet" />
</head>
<body class="floor-fade">
    @{
        ApplicationUser user = System.Web.HttpContext.Current.GetOwinContext().GetUserManager<ApplicationUserManager>().FindById(System.Web.HttpContext.Current.User.Identity.GetUserId());
    }
    <div class="topnav z-depth-2" name="navbar">

        @Html.ActionLink("*InsertLogoHere*", "Index", "Home")
        @Html.ActionLink("Home", "Index", "Home")
        @Html.ActionLink("About", "About", "Home")

        
        @if (Request.IsAuthenticated)
        {
            @Html.ActionLink("My Items", "Pets", "Home")
            <div class="topnav__items-right">
                <a href="@Url.Action("Index","Manage")">Hello @user.UserName!</a>
                <a href="@Url.Action("LogOff","Account")">Log off</a>
            </div>

        }
        else
        {
            <div class="topnav__items-right">
                @Html.ActionLink("Register", "Register", "Account")
                @Html.ActionLink("Log In", "Login", "Account")
            </div>
        }

    </div>
    <div class="container">
        @RenderBody()
        
        <footer class="footer">
            <hr />
            <p>Andre's Footer</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)

</body>
</html>
