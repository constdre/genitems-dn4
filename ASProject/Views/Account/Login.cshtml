@using ASProject.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<h2>@ViewBag.Title</h2>
<div class="row">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "col s5 red darken-2 white-text rounded-corners", role = "form", @style="padding: 30px;"}))
            {
                @Html.AntiForgeryToken()
                <h4>Use a local account to log in.</h4>
                <hr /><br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger"})
                <div class="input-field">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label white-text" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "validate white-text", @placeholder = "" })
                    <div class="col-md-10">

                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="input-field">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label white-text" })
                    @Html.PasswordFor(m => m.Password, new { @class = "validate white-text", @placeholder = "" })
                    <div class="col-md-10">

                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Log in" class="btn orange" />
                    </div>
                </div>
                <p>
                    @Html.ActionLink("Register as a new user", "Register", new {@class = "" })
                </p>


                @* Enable this once you have account confirmation enabled for password reset functionality
                    <p>
                        @Html.ActionLink("Forgot your password?", "ForgotPassword")
                    </p>*@
            }
        </section>
    
    <!--MaterializeCSS classes-->
    <div class="col s6 right red darken-2 white-text rounded-corners" style="padding:40px;">
        <section id="socialLoginForm">
            @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}